{
  "name": "npm-script",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "config": {
    "port": "3000"
  },
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint --quiet *.json",
    "mocha": "mocha tests/",
    "eslint": "eslint *.js",
    "pretest": "npm run lint",
    "test": "mocha tests/",
    "cover": "nyc --reporter=html npm test",
    "cover:cleanup": "rimraf coverage && rimraf .nyc_output",
    "cover:archive": "cross-var \" make-dir coverage_archive/$npm_package_version && cpr coverage/* coverage_archive/$npm_package_version -o\"",
    "cover:serve": "cross-var http-server coverage_archive/$npm_package_version -p $npm_package_config_port",
    "cover:open": "cross-var opn http://192.168.1.54:$npm_package_config_port",
    "precover": "npm run cover:cleanup",
    "postcover": "npm-run-all cover:archive --parallel cover:serve cover:open"
  },
  "keywords": [],
  "author": "jianwang",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "cpr": "^3.0.1",
    "cross-var": "^1.1.0",
    "eslint": "^5.16.0",
    "http-server": "^0.11.1",
    "jsonlint": "^1.6.3",
    "make-dir-cli": "^2.0.0",
    "mocha": "^6.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "opn-cli": "^4.1.0",
    "rimraf": "^2.6.3",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      ".*.js"
    ]
  }
}
